<Window x:Class="Zadanie5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zadanie5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="X :" FontSize="40" VerticalAlignment="Center"/>
        <TextBlock Text="Y :" FontSize="40" VerticalAlignment="Center" Grid.Row="1"/>
        <TextBox x:Name="TBX" Grid.Column="1" Grid.ColumnSpan="2"/>
        <TextBox x:Name="TBY" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"/>
        <Button Click="Button_Click" Content="OK" Grid.Row="2" Grid.ColumnSpan="3"/>
        <TextBlock x:Name="OTV" Grid.Row="3" Grid.ColumnSpan="3"/>
    </Grid>
</Window>
